#log
  %h1 Bundy Clock
  %p#date= long_date Time.now
  %table
    %tr
      %th
      %th Time In
      %th Time Out
      %th Comments

    - @users.each do |user|
      %tr{data: { employee: user.name } }
        %td= link_to user.name, user, class: "user"
        %td.in

          - if user.timed_in_today?
            %a.time{data: { timelogid: user.current_time_log.id }, href: "#"}
              = short_time user.current_time_log.in

          - elsif user == current_user
            = form_tag(time_in_path, method: :post) do
              = button_tag "Time In"
              -# use auth later for passing user.id 
              %input{name: "user_id", type: "hidden", value: user.id}

        %td.out

          - if user.timed_out_today?
            %a.time{data: { timelogid: user.current_time_log.id }, href: "#"}
              = short_time user.current_time_log.out

          - elsif user.must_time_out_today? && user == current_user
            = form_tag(time_out_path, method: :put) do
              = button_tag "Time Out"
              %input{name: "time_log_id", type: "hidden", value: user.current_time_log.id}

        %td.comment

          - if user.update_time?
            = user.current_time_log.comment.comments

