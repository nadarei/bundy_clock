!!! 5
%html
  %head
    %title BundyClock
    = stylesheet_link_tag "bundy"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body

    #top
      = link_to "Bundy clock", root_url, class: "home"
      = link_to Date.today.to_s(:month_year), "/month", class: "month"
      #aux
        - if logged_in?
          = "Hello, #{current_user.email}"
          %a{href: logout_path} Logout

        - else
          %a{href: login_path} Login
      %a.archive{href: '/archive'}
        Archive

    = yield
