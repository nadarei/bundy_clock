#user
  %h1= @user.name

  %table
    %tr
      %th Date
      %th Time In
      %th Time Out
      %th Comments
      %th Hours

    - @user.time_logs.each do |time_log|
      %tr
        %td.date= time_log.date

        %td.in
          - if time_log.in
            = short_time time_log.in
          - else
            = "-"

        %td.out
          - if time_log.out
            = short_time time_log.out
          - else
            = "-"

        %td.comment
          = time_log.comment.comments if time_log.comment

        %td.hours
          - if time_log.hours
            = time_log.hours.round(2)
          - else
            = "-"
