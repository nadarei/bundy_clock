%fieldset.leave-type
  %h4 Leave type:
  = fields_for time_log do |f|
    - TimeLog::LEAVE_TYPES.each do |type|
      %fieldset.field
        = f.radio_button 'leave_type', type
        = f.label "leave_type_#{type}", type.capitalize

  %fieldset.field
    = check_box 'time_log', 'leave_duration', { checked: 'unchecked' }, '0.5', '1.0'
    = label 'time_log', 'leave_duration', "Half day?"
